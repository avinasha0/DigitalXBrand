{
  "name": "digitalxbrand-website",
  "version": "1.0.0",
  "description": "Professional static website for DigitalXBrand Web Development Company",
  "main": "index.js",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./public_html/css/style.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./public_html/css/style.css --minify",
    "dev": "live-server public_html --port=3000",
    "build": "npm run build-css-prod"
  },
  "keywords": ["website", "web-development", "static", "tailwindcss"],
  "author": "DigitalXBrand",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "live-server": "^1.2.2"
  }
}
